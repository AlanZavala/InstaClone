<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:onClick="rootLayoutTapped"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtEnterEmail"
        android:layout_width="344dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Please enter an email"
        android:inputType="textPersonName"
        android:textColorHint="#FF5722"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="29dp" />

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="345dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint=" Please enter an username"
        android:inputType="textPersonName"
        android:textColorHint="#FF5722"
        app:layout_constraintTop_toBottomOf="@+id/edtEnterEmail"
        tools:layout_editor_absoluteX="30dp" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="346dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Please enter an password"
        android:inputType="textPassword"
        android:textColorHint="#FF5722"
        app:layout_constraintTop_toBottomOf="@+id/edtUsername"
        tools:layout_editor_absoluteX="29dp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="264dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:background="#8BC34A"
        android:text="Sign-Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="265dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:background="#E91E63"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUp" />

</androidx.constraintlayout.widget.ConstraintLayout>